@inject  FilterContainer FilterContainer;

<div class="input-group ">
        <input placeholder="ProductName:" type="text" class="form-control form-control-lg" @bind="FilterContainer.ProductName" />
        <input placeholder="ProductCode:" type="text" class="form-control form-control-lg" @bind="FilterContainer.ProductCode" />
</div>
<div class="input-group mb-1">
        <input placeholder="Description:" type="text" class="form-control form-control-lg" @bind="FilterContainer.Description" />    
</div>
<div class="container-fluid align-content-center mb-2">
    <button type="button" @onclick="@(async ()=>{await FilterContainer.LoadData();})" class="input-group-text btn btn-success   w-100">Search</button>
</div>

